<?xml version="1.0" encoding="utf-8"?>
<com.seven.seven.common.view.ErrorLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <RelativeLayout
        android:id="@+id/rly_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_eeror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:drawablePadding="@dimen/dp_4"
            android:drawableTop="@drawable/error"
            android:gravity="center"
            android:text="加载出错了"
            android:textSize="16sp" />

        <TextView
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_eeror"
            android:layout_centerInParent="true"
            android:background="@drawable/refresh_button_drawable"
            android:gravity="center"
            android:text="重新加载" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:indeterminate="true" />
    </RelativeLayout>
</com.seven.seven.common.view.ErrorLayoutView>
